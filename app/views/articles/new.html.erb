<h1>Create a new article</h1>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
    <%= @article.errors.messages[:title].to_sentence %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description, size: "60x12" %>
    <%= @article.errors.messages[:description].to_sentence %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>
